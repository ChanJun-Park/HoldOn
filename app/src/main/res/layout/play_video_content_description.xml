<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/play_video_content_description_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="?android:attr/selectableItemBackground">

    <TextView
        android:id="@+id/play_video_content_description_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="영상 제목"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/play_video_content_description_magnifier_image"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.9"/>

    <ImageView
        android:id="@+id/play_video_content_description_magnifier_image"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_search"
        app:layout_constraintStart_toEndOf="@id/play_video_content_description_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/play_video_content_description_title"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.1"/>

    <TextView
        android:id="@+id/play_video_content_description_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="영상 설명"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/play_video_content_description_title"
        app:layout_constraintStart_toStartOf="@id/play_video_content_description_title"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>