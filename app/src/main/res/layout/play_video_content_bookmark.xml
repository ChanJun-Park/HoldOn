<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/play_video_content_bookmark_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FFFFFFFF"
        app:cardCornerRadius="5dp"
        app:cardElevation="1dp"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="?android:attr/selectableItemBackground">

            <TextView
                android:id="@+id/play_video_content_bookmark_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="번호"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/play_video_content_bookmark_description"
                app:layout_constraintBottom_toTopOf="@id/play_video_content_bookmark_time"/>

            <TextView
                android:id="@+id/play_video_content_bookmark_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="time"
                app:layout_constraintStart_toStartOf="@id/play_video_content_bookmark_number"
                app:layout_constraintTop_toBottomOf="@id/play_video_content_bookmark_number"
                app:layout_constraintBottom_toBottomOf="@id/play_video_content_bookmark_number"/>

            <TextView
                android:id="@+id/play_video_content_bookmark_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                app:layout_constraintTop_toTopOf="@id/play_video_content_bookmark_number"
                app:layout_constraintStart_toEndOf="@id/play_video_content_bookmark_number"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="상제정보"/>

            <EditText
                android:id="@+id/play_video_content_bookmark_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:hint="새 북마크 이름"
                android:autofillHints="새 북마크 이름"
                android:inputType="text"
                android:visibility="gone"
                app:layout_constraintStart_toEndOf="@id/play_video_content_bookmark_number"
                app:layout_constraintTop_toBottomOf="@id/play_video_content_bookmark_description"
                app:layout_constraintEnd_toEndOf="@id/play_video_content_bookmark_description"/>

<!--                    <ImageButton-->
<!--                        android:id="@+id/breakpointButton"-->
<!--                        android:layout_width="40dp"-->
<!--                        android:layout_height="40dp"-->
<!--                        android:background="@drawable/selector_activated"-->
<!--                        android:src="@android:drawable/ic_menu_mylocation"/>-->

<!--                    <ImageButton-->
<!--                        android:id="@+id/repeatButton"-->
<!--                        android:layout_width="40dp"-->
<!--                        android:layout_height="40dp"-->
<!--                        android:padding="8dp"-->
<!--                        android:layout_marginStart="10dp"-->
<!--                        android:layout_marginLeft="10dp"-->
<!--                        android:scaleType="centerCrop"-->
<!--                        android:background="@drawable/selector_activated"-->
<!--                        android:src="@drawable/ic_repeat" />-->

                    <ImageButton
                        android:id="@+id/play_video_content_bookmark_edit_button"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/selector_activated"
                        android:src="@drawable/selector_edit_bookmark"
                        app:layout_constraintStart_toEndOf="@id/play_video_content_bookmark_number"
                        app:layout_constraintTop_toBottomOf="@id/play_video_content_bookmark_edit"/>

                    <ImageButton
                        android:id="@+id/play_video_content_bookmark_delete_button"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/box_unactivated"
                        android:src="@android:drawable/ic_menu_delete"
                        app:layout_constraintStart_toEndOf="@id/play_video_content_bookmark_edit_button"
                        app:layout_constraintTop_toBottomOf="@id/play_video_content_bookmark_edit"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>